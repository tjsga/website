{% for page in pages %}
	<div class="flex flex-wrap">
		{# Title #}
		<div class="md:w-1/3 w-full md:text-right md:pr-8 mb-6 md:mb-0">
			{% if page.header.header_image %}
				<img src="{{ page.media[page.header.header_image].resize(300).url() }}" class="mb-4 ml-auto" />
			{% endif %}
			{% if page.header.publish_date %}
				<p class="opacity-75 text-lg mb-2">
					Published <span class="font-bold">{{ page.header.publish_date|nicetime }}</span>
				</p>
			{% endif %}
			<h3 class="text-2xl font-bold text-primary">
				{% if page.url %}
					<a href="{{ page.url }}">{{ page.title }}</a>
				{% else %}
					{{ page.title }}
				{% endif %}
			</h3>
		</div>
		{# Content #}
		<div class="md:w-2/3 w-full">
			<div class="text-lg leading-8">
				{{ page.header.summary }}
			</div>
			{% if page.url %}
				<a class="mt-4 p-2 inline-block bg-primary text-light rounded" href="{{ page.url }}">Read More</a>
			{% endif %}
		</div>
	</div>
	{% if not loop.last %}
		<hr class="my-8" />
	{% endif %}
{% endfor %}
