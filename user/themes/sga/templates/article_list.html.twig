{% extends 'partials/base.html.twig' %}

{% block content %}
<section class="container mx-auto px-8 my-8">
	{% for feature in page.collection %}
		<div class="flex flex-wrap mb-4">
			<div class="md:w-1/3 w-full md:text-right mb-4">
				{% if feature.title %}
					<h3 class="text-2xl font-bold text-primary md:mr-8">
						{% if feature.url %}
						<a href="{{feature.url}}">
						{% endif %}

						{{ feature.title }}
						
						{% if feature.url %}
						</a>
						{% endif %}
					</h3>
				{% endif %}
			</div>
			{% if feature.summary %}
				<div class="md:w-2/3 w-full text-lg leading-8">
					{{ feature.summary }}
				</div>
			{% endif %}
		</div>
		{% if not loop.last %}
			<hr class="my-4"/>
		{% endif %}
	{% endfor %}
</section>
{% endblock %}