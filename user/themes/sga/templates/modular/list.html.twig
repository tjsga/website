<section class="container mx-auto px-8 my-8">
	{% for feature in page.header.items %}
		<div class="flex flex-wrap mb-4">
			<div class="md:w-1/3 w-full md:text-right mb-4">
				{% if feature.title %}
					<p class="text-2xl font-bold text-primary md:mr-8">
						{% if feature.url %}
							<a href="{{ feature.url }}">{{ feature.title }}</a>
						{% else %}
							{{ feature.title }}
						{% endif %}
					</p>
				{% endif %}
			</div>
			{% if feature.text %}
				<div class="md:w-2/3 w-full text-lg leading-7 markdown">
					{{ feature.text|markdown }}
				</div>
			{% endif %}
		</div>
		{% if not loop.last %}
			<hr class="my-4" />
		{% endif %}
	{% endfor %}
</section>
